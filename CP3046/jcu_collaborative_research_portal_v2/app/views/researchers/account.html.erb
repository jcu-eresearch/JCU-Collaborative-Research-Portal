<% content_for :head do %>
  <link rel="alternate" type="application/rss+xml" href="<%= account_researcher_path(@researcher, :rss) %>" title="<%= @researcher.name %>'s Personal RSS Feed">
<% end %>

<% content_for :title do %>
	<%= "My Account" %>
<% end %>

<div class='sub_navigation navigation'>
	<ul class='links'>
		<li><%= link_to 'My Profile', researcher_path(@researcher), :class => 'ui-state-default ui-corner-all hover-button' %>               </li>
		<li><%= link_to 'My Posts', posts_researcher_path(@researcher), :class => 'ui-state-default ui-corner-all hover-button' %>           </li>
		<li><!-- TODO - View Notification Preferences -->                           </li>
	</ul>
</div>

<div class='sub_navigation navigation feeds'>
	<ul>
		<li><%= link_to 'My Personal RSS Feed', account_researcher_path(@researcher, :rss), :class => 'ui-state-default ui-corner-all hover-button ui-priority-secondary' %>           </li>
	</ul>
</div>
