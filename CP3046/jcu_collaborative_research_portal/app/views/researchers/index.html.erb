<h1>Listing researchers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Jc number</th>
    <th>Title</th>
    <th>Moderator</th>
    <th>Email</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @researchers.each do |researcher| %>
  <tr>
    <td><%= researcher.name %></td>
    <td><%= researcher.jc_number %></td>
    <td><%= researcher.title %></td>
    <td><%= researcher.moderator %></td>
    <td><%= researcher.email %></td>
    <td><%= researcher.slug %></td>
    <td><%= link_to 'Show', researcher %></td>
    <td><%= link_to 'Edit', edit_researcher_path(researcher) %></td>
    <td><%= link_to 'Destroy', researcher, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

