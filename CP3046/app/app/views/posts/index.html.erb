<h1>Listing Research Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <td></td>
    <td></td>
    <td></td>
  </tr>

<%= will_paginate @posts %>
<% @posts.each_with_index do |post, index| %>
  <% css_class = index.odd? ? "odd" : "even" %>
  <tr class='<%= css_class %>'>
    <td><%= post.title %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
