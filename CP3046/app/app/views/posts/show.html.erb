<h1 class="title"><%= @post.title %></h1>

<div class="content">
  <%= raw BlueCloth.new(@post.content).to_html %>
</div>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
	<h4 class="commentor_name"><%= comment.researcher.name %></h4>
	<div class='comment'>
		<%= raw BlueCloth.new(comment.body).to_html %>
	</div>

<% end %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<fieldset>  
		<div class="field">
			<%= f.label :body%><br />
			<%= f.text_area :body %>
		</div>
		<div class="actions">
			<%= f.submit 'Comment', :class => "submit" %>
		</div>
	</fieldset>  
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
