<% content_for :title do %>
	<%= "#{@researcher.name}'s Posts" %>
<% end %>

<% if @researcher == logged_in_researcher %>
	<div class='sub_navigation navigation'>
		<ul>
			<li><%= link_to 'My Profile', researcher_path(@researcher) %></li>
			<li class='current'><%= link_to 'My Posts', posts_researcher_path(@researcher) %></li>
		</ul>
	</div>
	<div class='sub_navigation navigation actions'>
		<ul>
			<li><%= link_to 'New Post', new_post_path %></li>
		</ul>
	</div>
<% else%>
	<div class='sub_navigation navigation'>
		<ul>
			<li><%= link_to "#{@researcher.name}'s Profile", researcher_path(@researcher) %></li>
			<li class='current'><%= link_to "#{@researcher.name}'s Posts", posts_researcher_path(@researcher) %></li>
		</ul>
	</div>
<% end %>

<h1><%= @researcher.name %> - Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

<% @researcher.posts.each_with_index do |post, index| %>
  <% css_class = index.odd? ? "odd" : "even" %>
  <tr class='<%= css_class %>'>
    <td><%= post.title %></td>
    <td><%= link_to 'Show', post %></td>
  </tr>
<% end %>
</table>

