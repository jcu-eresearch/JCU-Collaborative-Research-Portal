<% content_for :head do %>
  <link rel="alternate" type="application/rss+xml" href="<%= posts_researcher_path(@researcher, :rss) %>" title="Posts by <%= @researcher.name%> RSS Feed">
<% end %>

<% content_for :title do %>
	<%= "#{@researcher.name}'s Posts" %>
<% end %>

<% content_for :navigation do %>
  <% if @researcher == logged_in_researcher %>
    <div class='sub_navigation'>
      <ul>
        <li><%= link_to "My Profile", researcher_path(@researcher) %></li>
        <li class='current'><%= link_to "My Posts", posts_researcher_path(@researcher) %></li>
      </ul>
    </div>
    <div class='sub_navigation actions'>
      <ul>
        <li><%= link_to 'New Post', new_post_path %></li>
      </ul>
    </div>
  <% else%>
    <div class='sub_navigation'>
      <ul>
        <li><%= link_to "#{@researcher.name}'s Profile", researcher_path(@researcher) %></li>
        <li class='current'><%= link_to "#{@researcher.name}'s Posts", posts_researcher_path(@researcher) %></li>
        <li><%= link_to "#{@researcher.name}'s Posts RSS Feed", posts_researcher_path(@researcher, :rss), :class => "ui-priority-secondary" %></li>
      </ul>
    </div>
  <% end %>
<% end %>

<h1><%= @researcher.name %> - Posts</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% @researcher.posts.each_with_index do |post, index| %>
  <tr>
    <td><%= link_to post.title, post%></td>
  </tr>
<% end %>
</table>
